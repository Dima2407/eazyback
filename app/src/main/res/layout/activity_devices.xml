<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stock_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/Cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/main_margin"
                style="@style/StockAnnotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headset_plug"
                android:gravity="center"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/secondary_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headset_automat"
                    android:paddingLeft="@dimen/main_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/main_text_size"/>


                <Switch
                    android:id="@+id/plug_event_automatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/main_margin"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/secondary_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headset_manual"
                    android:paddingLeft="@dimen/main_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/main_text_size"/>


                <Switch
                    android:id="@+id/plug_event_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/main_margin"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/secondary_margin"
                android:layout_marginBottom="@dimen/secondary_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headset_ignore"
                    android:paddingLeft="@dimen/main_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/main_text_size"/>


                <Switch
                    android:id="@+id/plug_event_ignore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/main_margin"
                    />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/Cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/main_margin"
                style="@style/StockAnnotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headset_unplug"
                android:gravity="center"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/secondary_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headset_automat"
                    android:paddingLeft="@dimen/main_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/main_text_size"/>


                <Switch
                    android:id="@+id/un_plug_event_automatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/main_margin"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/secondary_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headset_manual"
                    android:paddingLeft="@dimen/main_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/main_text_size"/>


                <Switch
                    android:id="@+id/un_plug_event_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/main_margin"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/secondary_margin"
                android:layout_marginBottom="@dimen/secondary_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headset_ignore"
                    android:paddingLeft="@dimen/main_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/main_text_size"/>


                <Switch
                    android:id="@+id/un_plug_event_ignore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/main_margin"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
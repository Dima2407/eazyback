<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_panel_window_root"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Cell">

    <Button
        android:id="@+id/accept_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accept_call"
        style="@style/CallPanelButton"/>

    <Button
        android:id="@+id/reject_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reject_call"
        style="@style/CallPanelButton"/>

    <Button
        android:id="@+id/callback_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/callback"
        style="@style/CallPanelButton"/>

    <Button
        android:id="@+id/delay_callback_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delay_callback"
        style="@style/CallPanelButton"/>

</LinearLayout>